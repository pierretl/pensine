{
    "manifest_version": 3,
    "name": "Add to Pensine",
    "description": "Ajouter à la penseine le site web actuellement consulté",
    "version": "1.0",
    "icons": {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon2.png",
            "24": "icon2.png",
            "32": "icon2.png"
        }
    },

    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],

    "host_permissions":[
        "https://*/*", 
        "http://*/*" 
    ]
  }